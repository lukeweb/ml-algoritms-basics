{
  "name": "machine-learning",
  "license": "UNLICENSED",
  "private": true,
  "type": "commonjs",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "start:dev": "NODE_ENV=development nodemon src/index.ts | pino-pretty -t SYS:standard",
    "start:inspect": "NODE_ENV=development nodemon --exec \"node --inspect -r ts-node/register\" src/index.ts | pino-pretty -t SYS:standard",
    "typecheck": "tsc --incremental false --noEmit",
    "lint": "eslint \"./src/**/*.ts\"",
    "lint:fix": "yarn lint --fix",
    "test": "NODE_ENV=test jest --passWithNoTests",
    "test:watch": "yarn test --watch",
    "typeorm": "ts-node ./node_modules/.bin/typeorm",
    "typeorm-seeding": "ts-node ./node_modules/.bin/typeorm-seeding",
    "bcrypt": "node ./node_modules/bcryptjs/bin/bcrypt"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "env": {
      "es6": true,
      "node": true
    },
    "plugins": [
      "@typescript-eslint",
      "filenames"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": [
          "^.+\\.spec.ts$"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {
      "filenames/match-regex": [
        2,
        "^[a-z-\\d\\.]+$",
        true
      ]
    }
  },
  "nodemonConfig": {
    "watch": [
      "./src/**/*.ts",
      ".env"
    ],
    "ignore": [
      "./src/**/*.spec.ts"
    ],
    "execMap": {
      "ts": "ts-node"
    },
    "delay": 100
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "@swc/jest"
      ]
    },
    "testRegex": "^.+\\.spec.ts$"
  },
  "devDependencies": {
    "@swc/core": "^1.2.130",
    "@swc/jest": "^0.2.17",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.178",
    "@types/node": "^16.11.6",
    "@types/qs": "^6.9.7",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.14",
    "pino-pretty": "^7.1.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "libsvm-ts": "^0.0.8",
    "lodash": "^4.17.21",
    "ml-dataset-iris": "^1.2.1",
    "pino": "^7.8.0"
  }
}
